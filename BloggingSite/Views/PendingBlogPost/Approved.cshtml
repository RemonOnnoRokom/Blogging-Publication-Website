@model PendingBlog

@{
	ViewData["Title"] = "Approved";
}

Posted By:@Model.CreatedBy<br />
Posted on: @Model.CreatedDate
<hr />

<div class="col-md-4">
	<div>		
		<div class="form-group">	
			<p>@Model.Content</p>
		</div>
		<div class="form-group">
			<a asp-action="Approved" asp-controller="PendingBlogPost" class="btn btn-success" asp-route-PostId="@Model.Id" asp-route-AdminStatus="@BlogStatus.Approved">Approved</a>
			<a asp-action="Delete" asp-controller="PendingBlogPost" class="btn btn-danger" asp-route-id="@Model.Id">Discard</a>
		</div>
	</div>
</div>
<br />
<div>
	<a asp-action="Index" class="btn btn-primary">Pending List</a>
</div>