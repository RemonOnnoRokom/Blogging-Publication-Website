@model List<ApprovedBlog>

@{
    ViewData["Title"] = "Home";
}

<p>
    <a asp-action="CreateNewBlog" asp-controller="Home" class="btn btn-primary">Publish New Blog</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th width="600px">Content</th>
            <th>CreatedDate </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td  width="600px"> @item.Content.Substring(0,10)</td>
                <td> @DateOnly.FromDateTime(@item.CreatedDate)</td>
                <td>
                    <a asp-action="SpecificBlog" asp-route-id="@item.Id" class="btn btn-primary">Expand</a>
                </td>
            </tr>
        }
    </tbody>
</table>
